    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2017",
    // "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src/server",
    "src/shared"
  ]
}